{
    "manifest_version": 2,
    "name": "ODesk watcher",
    "description": "ODesk watcher sends notifications on new tasks on Odesk",
    "version": "1.5",
    "icons": {
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": "img/icon16.png",
        "default_popup" : "popup.html"
    },
    "background": {
        "page" : "background.html"
    },
    "options_page" : "options.html",
    "permissions": [
        "background",
        "unlimitedStorage",
        "notifications",
        "*://www.odesk.com/*"
    ]
}